{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "removeComments": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "source",
    "paths": {
      "@interfaces": [
        "shared/interfaces"
      ],
      "@constants": [
        "shared/constants"
      ],
      "@database": [
        "shared/database"
      ],
      "@middleware": [
        "shared/middleware"
      ],
      "@utils": [
        "shared/utils"
      ],
    }
  }
}